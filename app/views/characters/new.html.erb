<h1>New Character!</h1>
<%= form_for :character, url: characters_path  do |f| %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :kurzbeschreibung %><br>
      <%= f.text_area :kurzbeschreibung %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>
<%= link_to 'Back', characters_path %>